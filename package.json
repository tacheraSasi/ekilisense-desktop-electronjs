{
  "name": "ekilisense",
  "version": "2.0.0",
  "description": "A desktop application for ekiliSense  ",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "ekilisense",
    "ekilie",
    "ekili"
  ],
  "author": "Tachera Sasi <tachera@ekilie.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "is-online": "^11.0.0",
    "node-fetch": "^2.6.7"
  },
  "build": {
    "appId": "com.ekilie.ekilisense",
    "productName": "ekiliSense",
    "files": [
      "src/**/*",
      "assets/**/*",
      "offline.html",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "sign": false
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "icon": "assets/ekilie_logo.png",
      "category": "Office",
      "maintainer": "ekilie <support@ekilie.com>"
    },
    "extraMetadata": {
      "homepage": "https://sense.ekilie.com"
    }
  }
}